<AnchorPane prefHeight="600.0" prefWidth="758.0" styleClass="AnchorPane" stylesheets="@../../Styles/profile.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.safexbank.safexbank.Controllers.Client.ProfileController">

        <!-- Vertical Box to arrange the data vertically -->
        <VBox layoutX="20.0" layoutY="20.0" spacing="10">
            <!-- ID Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ID:" wrappingWidth="146.95005798339844" />
                <Label fx:id="id_label" text="123" />
            </HBox>
      <HBox layoutX="25.0" layoutY="25.0" spacing="5">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Account ID:" wrappingWidth="146.95005798339844" />
            <Label fx:id="account_id" text="123" />
         </children>
      </HBox>

            <!-- First Name Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name:" wrappingWidth="146.95005798339844" />
                <Label fx:id="fname_label" text="kaif" />
            </HBox>

            <!-- Last Name Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name:" wrappingWidth="146.95005798339844" />
                <Label fx:id="lname_label" text="nazir" />
            </HBox>

            <!-- Payee Address Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SafeX Address:" wrappingWidth="146.95005798339844" />
                <Label fx:id="payee_address_label" text="kaif@safex" />
            </HBox>

            <!-- Password Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password:" wrappingWidth="146.95005798339844" />
                <Label fx:id="password_label" text="12345" />
            </HBox>

            <!-- Checking Account Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Checking Account:  " wrappingWidth="146.95005798339844" />
                <Label fx:id="checking_acc_label" text="123.546" />
            </HBox>

            <!-- Savings Account Row -->
            <HBox spacing="5">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Savings Account:" wrappingWidth="146.95005798339844" />
                <Label fx:id="savings_acc_label" text="564.546" />
            </HBox>

            <!-- Delete Account Button (If required) -->
            <HBox spacing="5">
                <Button fx:id="delete_btn" styleClass="Button_delete_btn" text="Delete Account">
                    <graphic>
                        <FontAwesomeIconView fill="RED" glyphName="REMOVE" />
                    </graphic>
                </Button>
            </HBox>
      <styleClass>
         <String fx:value="VBox_container" />
         <String fx:value="outlined-box" />
      </styleClass>
        </VBox>

</AnchorPane>
